<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-0 panel panel-default">
      <h1 align="center" class="margin-base-vertical">Welcome to the Transport Hub</h1>
      <p class="help-block text-center">
          <medium>Depending on your interest, I'll take you to a city</medium>
      </p>
      <form class="margin-base-vertical" method="post" action="/city">
        <p class="input-group ">
          <span class="input-group-addon"><span class="icon-user"></span></span>
          <select  required class="form-control input-lg" name="interest" >
            <option value="finance">Business</option>
            <option value="fashion">Fashion</option>
            <option value="history">History</option>
          </select>
        </p>
        <p class="text-center">
          <button type="submit" class="btn btn-success btn-lg">Submit</button>
          <a href="/cancel" class="btn btn-success btn-lg">Cancel</a>
        </p>
      </form>
    </div>
  </div>
</div>

